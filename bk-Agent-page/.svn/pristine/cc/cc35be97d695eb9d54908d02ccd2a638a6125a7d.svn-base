<!DOCTYPE html>
<html style="background: #fff;">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black" />
		<meta name="format-detection" content="telephone=no, email=no" />
		<link rel="stylesheet" href="STYLE_DOMAIN/Wechat/css/weuix.css" />
		<link rel="stylesheet" href="STYLE_DOMAIN/Wechat/css/index.css" />
		<title>雀搜</title>
		<style>
			/*媒体查询适配开始*/
			@media (min-width:375px) and (max-width:667px){
				.qg-right{
					position: relative;
				  	right: 5px;
				}
			}
			
			@media only screen and (min-device-width:768px) and (max-device-width:1024px){
				.qg-right{
					margin-top: 5px;
				}
			}
			/*媒体查询适配结束*/
		</style>
	</head>
	<body style="background: #fff;">
		<!--页面顶部开始-->
		<header style="font-size: 0;">
			<form method="get" action="{:U('Search/gongying_list')}" id="searchForm">
				<div class="search_box_div">
					<div class="search_box">
						<input type="search" class="search_input"  name="keyword" placeholder="请输入关键词搜索">
						<input id='type' type="hidden" name="type" value="找供应">
						<span class="search_btn" onclick="SiteSearch(this)"></span>
					</div>	
				</div>
			</form>	
			<img class="img-100 main-advertising"  src="STYLE_DOMAIN/Wechat/Images/home-banner01.png"/>
		</header>
		<!--页面底部结束-->
		<!--中间广告位开始-->
		<div class="middle-banner">
			<!--左边广告位-->
			<div class="fl md-left-banner">
				<img class="img-100" src="STYLE_DOMAIN/Wechat/Images/middle-banner-left01.png"/>
			</div>
			<!--右边广告位-->
			<div class="fl md-right-banner">
				<div><img class="img-100 right-advertising-1" src="STYLE_DOMAIN/Wechat/Images/middle-banner-right01.png"/></div>
				<div><img onclick="chack_vip()" class="img-100" src="STYLE_DOMAIN/Wechat/Images/middle-banner-right02.png"/></div>
			</div>
			<div class="clear"></div>
		</div>
		<!--中间广告位结束-->
		<div class="height-10-ef"></div>
		<!--热门供应开始-->
		<div class="hot-gy-div">
			<!--热门导航开始-->
			<div class="hot-nav">
				<div class="fl hot-nav-lf">
					热门供应
				</div>
				<div class="fr hot-nav-rt" id="more-gy">
					<span class="gy-more vam">更多</span>
					<img class="gy-more-img vam" src="STYLE_DOMAIN/Wechat/Images/home_icon_more_nor@2x.png"/>
				</div>
				<div class="clear"></div>
			</div>
			<!--热门导航结束-->
			<!--供应展示开始-->
			<div class="hot-gy-zhanshi">
				<volist name='mr_data' id='vo'>
					<div class="gy_list" name="{$vo.itemid}">
						<img class="img-100" src="STYLE_DOMAIN/Wechat/Images/home_img_gongying_01@2x.png"/>
						<p class="hot-gy-title">{$vo.title}</p>
						<p class="org hot-gy-price">
							<span class="ziti3">&yen;</span>
							<empty name="vo.int" >
							{$vo.price}
							<else /> 
							<span class="ziti3">{$vo.int}</span>.{$vo.folder}
							</empty>
						</p>
					</div>
				</volist>
				<volist name='rc_data' id='vo'>
					<div class="gy_list" name="{$vo.itemid}">
						<img class="img-100" src="STYLE_DOMAIN/Wechat/Images/home_img_gongying_02@2x.png"/>
						<p class="hot-gy-title">{$vo.title}</p>
						<p class="org hot-gy-price">
							<span class="ziti3">&yen;</span>
							<empty name="vo.int" >
							{$vo.price}
							<else /> 
							<span class="ziti3">{$vo.int}</span>.{$vo.folder}
							</empty>
						</p>
					</div>
				</volist>
				<volist name='fz_data' id='vo'>
					<div class="gy_list" name="{$vo.itemid}">
						<img class="img-100" src="STYLE_DOMAIN/Wechat/Images/home_img_gongying_03@2x.png"/>
						<p class="hot-gy-title">{$vo.title}</p>
						<p class="org hot-gy-price">
							<span class="ziti3">&yen;</span>
							<empty name="vo.int" >
							{$vo.price}
							<else /> 
							<span class="ziti3">{$vo.int}</span>.{$vo.folder}
							</empty>
						</p>
					</div>
				</volist>			
			</div>
			<!--供应展示结束-->
		</div>
		<!--热门供应结束-->
		<div class="height-10-ef"></div>
		<!--最新求购开始-->
		<div class="new-qg-div">
			<!--最新导航开始-->
			<div class="hot-nav">
				<div class="fl hot-nav-lf">
					最新求购
				</div>
				<div class="fr hot-nav-rt" id="more-qg">
					<span class="qg-more vam">更多</span>
					<img class="qg-more-img vam" src="STYLE_DOMAIN/Wechat/Images/home_icon_more_nor@2x.png"/>
				</div>
				<div class="clear"></div>
			</div>
			<!--最新导航结束-->
			<!--求购展示开始-->
			<section class="qg_des_list">
				<ul>
					<volist name="jian_data" id="vo">
						<li class="qg_list">
							<div class="fl qg-left">
								<img class="qg-img" src="STYLE_DOMAIN/Wechat/Images/qwe1.png" alt="">
							</div>
							<div class="fl qg-right">
								<h4 class="qg-title">{$vo.search_detail_title}</h4>
								<p class="weui_media_desc qg-timer">{$vo.search_detail_createtime}</p>
								<div class="qg-money">
									<div class="fl org qg-price">
										<span class="ziti3">¥</span>
										<empty name="vo.int" >
										{$vo.search_detail_amount}
										<else />
										<span class="ziti3">{$vo.int}</span>.{$vo.folder}
										</empty>
									</div>
									<div class="fr qg-count">
										<span class="count-1">数量：</span>
									<if condition="$vo.search_detail_qty eq '面议'">	
										<span class="count-2">{$vo.search_detail_qty}</span>
									<else/>
										<span class="count-2">{$vo.search_detail_qty}件</span>
									</if>	
									</div>
								</div>
							</div>
						</li>
						<input type="hidden" value="{$vo.search_detail_id}">
					</volist>
					<volist name="shu_data" id="vo">
						<li class="qg_list">
							<div class="fl qg-left">
								<img class="qg-img" src="STYLE_DOMAIN/Wechat/Images/qwe2.png" alt="">
							</div>
							<div class="fl qg-right">
								<h4 class="qg-title">{$vo.search_detail_title}</h4>
								<p class="weui_media_desc qg-timer">{$vo.search_detail_createtime}</p>
								<div class="qg-money">
									<div class="fl org qg-price">
										<span class="ziti3">¥</span>
										<empty name="vo.int" >
										{$vo.search_detail_amount}
										<else />
										<span class="ziti3">{$vo.int}</span>.{$vo.folder}
										</empty>
									</div>
									<div class="fr qg-count">
										<span class="count-1">数量：</span>
									<if condition="$vo.search_detail_qty eq '面议'">	
										<span class="count-2">{$vo.search_detail_qty}</span>
									<else/>
										<span class="count-2">{$vo.search_detail_qty}件</span>
									</if>	
									</div>
								</div>
							</div>
						</li>
						<input type="hidden" value="{$vo.search_detail_id}">
					</volist>	
					<volist name="shi_data" id="vo">
						<li class="qg_list">
							<div class="fl qg-left">
								<img class="qg-img" src="STYLE_DOMAIN/Wechat/Images/qwe3.png" alt="">
							</div>
							<div class="fl qg-right">
								<h4 class="qg-title">{$vo.search_detail_title}</h4>
								<p class="weui_media_desc qg-timer">{$vo.search_detail_createtime}</p>
								<div class="qg-money">
									<div class="fl org qg-price">
										<span class="ziti3">¥</span>
										<empty name="vo.int" >
										{$vo.search_detail_amount}
										<else />
										<span class="ziti3">{$vo.int}</span>.{$vo.folder}
										</empty>
									</div>
									<div class="fr qg-count">
										<span class="count-1">数量：</span>
									<if condition="$vo.search_detail_qty eq '面议'">	
										<span class="count-2">{$vo.search_detail_qty}</span>
									<else/>
										<span class="count-2">{$vo.search_detail_qty}件</span>
									</if>	
									</div>
								</div>
							</div>
						</li>
						<input type="hidden" value="{$vo.search_detail_id}">
					</volist>
				</ul>
			</section>
			<!--求购展示结束-->
		</div>
		<!--最新求购结束-->
		<!--页面底部开始-->
		<div class="0 page">
			<div data-role="footerbar"></div>
		</div>
		<!--页面底部开结束-->
		<script type="text/javascript" src="STYLE_DOMAIN/Wechat/js/zepto.js"></script>
		<script type="text/javascript" src="STYLE_DOMAIN/Wechat/js/common.js"></script>
		<script>
			$(function(){
				Footerbar();//创建底部选项卡
				$(".search_input").on("keydown",function(e){
					if(e.keyCode==13){			
						$('#searchForm').submit();
						$(this).blur();					
					}
				});
	
				$(".gy-more").on('click',function(){
					location.href="{:U('Search/gongying_list')}?type=找供应";
	       		});
	       		
	            $(".qg-more").on('click',function(){
					location.href="{:U('Search/index')}?type=找需求";
	            });
	
	            $(document).on("click", ".qg_list", function() {
					var id = $(this).next('input').val();
					location.href = "{:U('Goods/get_search_goods')}" + "?id=" + id + '&lx=1';
				});
				
				$(document).on("click", ".gy_list", function() {
					var id = $(this).attr('name');
					location.href = "{:U('Goods/get_goods')}" + "?id=" + id + '&lx=2';
				});
				
			    $(document).on("click",".main-advertising",function(){
			    	location.href="{:U('Search/index')}?type=找需求";
			    });
			 
				$(document).on("click",".right-advertising-1",function(){
			    	var action="<?php echo urlencode('http://jieyang.5276mall.com/mall/');?>";
			    	location.href="{:U('Weixin/index')}"+"?type=shop&action="+action;
		    	});
			})
	
			$(window).on('load',function(){
				//页面加载完时执行
				getHeight();
			})
			
			$(window).resize(function(){
				//浏览器窗口大小变化时
				getHeight();
			})
			
			function getHeight(){
				var twoimgH = $('.md-right-banner').height();
				$('.md-left-banner').height(twoimgH);
			}

			function SiteSearch(){	
				$('#searchForm').submit();
			}
			
			function chack_vip(){
				location.href="{:U('User/chack_vip')}";
			}
		</script>
	</body>
</html>