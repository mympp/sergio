<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>管理员管理</title>
    <link rel="stylesheet" type="text/css" href="STYLE_DOMAIN/Agent/css/common.css" />
    <link rel="stylesheet" type="text/css" href="STYLE_DOMAIN/Agent/css/index.css" />
    <link rel="stylesheet" type="text/css" href="STYLE_DOMAIN/Agent/css/set.css">
</head>
<body style="min-width: 1250px;">
<!--父容器开始-->
<div class="outer_div">
	<div class="left_template">
       <include file="Common:left_nav"/>
    </div>
	<div class="right_template">
        <include file="Common:right_nav"/>
    </div>
    <div class="page-set">
        <div>
            <h2>管理员设置</h2>
            <a href="javascript:;" class="addAdmin fr blue-btn">新增</a>
        </div>
        <!--表格模块开始-->
        <div class="table-wrap">
            <div class="table-head">
                <div class="table-head-wrap">
                    <table class="grid">
                        <colgroup>
                            <col style="width:5%">
                            <col style="width:10%">
                            <col style="width:20%">
                            <col style="width:15%">
                            <col style="width:10%">
                            <col style="width:20%">
                            <col style="width:10%">
                            <col style="width:10%">
                        </colgroup>
                        <thead>
                            <tr>
                                <th>编号</th>
                                <th>姓名</th>
                                <th>账号</th>
                                <th>联系电话</th>
                                <th>部门</th>
                                <th>最后登录日期</th>
                                <th>状态</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="table-content table-content1">
                <table class="grid">
                    <colgroup>
                            <col style="width:5%">
                            <col style="width:10%">
                            <col style="width:20%">
                            <col style="width:15%">
                            <col style="width:10%">
                            <col style="width:20%">
                            <col style="width:10%">
                            <col style="width:10%">
                    </colgroup>
                    <tbody class="table_ctbody">
                       
                    </tbody>
                </table>
            </div>
        </div>
        <!--表格模块结束-->
        <!--分页器开始-->
        <div class="xiansuo_Page_Div">
            <!--<div class="xiansuo_Page_border"></div>-->
            <div class="xiansuo_Page_div">
                <div class="fl">
                    <span style="margin-right: 5px;">每页显示</span>
                    <select class="xiansuo_Page_Three">
                        <option value="10">10</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <span style="margin-left: 5px;">条</span><span style="margin-left: 10px;">共</span><span class="xiansuo_Sizes">1500</span><span>条/</span><span class="xiansuo_Pages">50页</span>
                    <img class="first_page" title="第一页" src="STYLE_DOMAIN/Agent/Images/icon_sanjiao_01.png" alt="" />
                    <img class="prev_page" title="上一页" src="STYLE_DOMAIN/Agent/Images/icon_sanjiao_02.png" alt="" />
                </div>
                <ul class="xiansuo_Page_list">
                    <li class="active">1</li>
                    <li>2</li>
                    <li>3</li>
                    <li>4</li>
                    <li>5</li>
                </ul>
                <img class="next_page" title="下一页" style="margin-left: 15px;" src="STYLE_DOMAIN/Agent/Images/icon_sanjiao_03.png" alt="" />
                <img class="last_page" title="最后一页" src="STYLE_DOMAIN/Agent/Images/icon_sanjiao_04.png" alt="" />
                <span style="margin: 0 5px;">跳转</span><input type="text" value="0" class="that_Page" maxlength="10" /><span style="margin-left: 5px;">页</span>
            </div>
        </div>
        <!--分页器结束-->
    
    <!-- 模拟弹出框开始 -->
    <!-- 背景 -->
    <div class="moni-box" style="display: none;"></div>
    <!-- 新增管理员 -->
    <div class="add-admin moni-lbox" style="display: none;">
        <div class="moni-head">
            <p class="fl">新增管理员</p>
            <em class="DataCenterBox-cols cleanAll fr">&#215;</em>
        </div>
        <form class="moni-main">
            <label class="long-text">姓<span class="fr">名：</span></label><input type="text" name="name" placeholder="管理员名称"><br />
            <label class="long-text">电<span class="fr">话：</span></label><input type="text" name="phone" placeholder="管理员电话"><br />
            <label class="long-text">账<span class="fr">号：</span></label><input type="text" name="ID" placeholder="管理员账号"><br />
            <label class="long-text">密<span class="fr">码：</span></label><input type="password" name="password" placeholder="管理员密码"><br />
            <label class="long-text">部<span class="fr">门：</span></label><input type="text" name="bumen" placeholder="管理员部门"><br />
           
            <br />
            <label class="long-text">启动状态：</label>
            <select class="status" style=" left: -4px; ">
                <option class="select-box" value="有效">有效</option>
                <option class="select-box" value="无效">无效</option>
            </select>
            <br />
            <div class="remove-btn">
                <input type="button" name="cancel" value="取消" class="cancel white-btn">
                <input type="button" name="submit" value="确认" class="submit blue-btn" id="addAdminSubmit">
            </div>
        </form>
    </div>
    <!-- 管理员详情 -->
    <div class="admin-details moni-lbox" style="display: none;">
        <div class="moni-head">
            <p class="fl">管理员详情</p>
            <em class="DataCenterBox-cols cleanAll fr">&#215;</em>
        </div>
        <div class="moni-main">
            <div>
                <label>姓<div class="fr">名：</div></label>
                <span class="name">姓名A</span>
            </div>
            <div>
                <label>账<div class="fr">号：</div></label>
                <span class="ID">chengaiwen@527so.com</span>
            </div>
            <div>
                <label>电话号码：</label>
                <span class="phone">15612345678</span>
            </div>
            <div>
                <label>部<div class="fr">门：</div></label>
                <span class="section">研发部</span>
            </div>
            <div>
                <label>状<div class="fr">态：</div></label>
                <span class="status">有效</span>
            </div>
            <div>
                <label>创建日期：</label>
                <span class="addTime">2017-10-30 11：48</span>
            </div>
            <div>
                <label>更新日期：</label>
                <span class="updateTime">2017-10-30 18：48</span>
            </div>
        </div>
    </div>
    <!-- 编辑管理员 -->
    <div class="admin-redact moni-lbox" style="display: none;">
        <div class="moni-head">
            <p class="fl">编辑管理员</p>
            <em class="DataCenterBox-cols cleanAll fr">&#215;</em>
        </div>
        <form class="moni-main">
            <label class="long-text">姓<span class="fr">名：</span></label><input type="text" name="name" value="姓名A"><br />
            <label class="long-text">电<span class="fr">话：</span></label><input type="text" name="phone" value="15603078635"><br />
            <label class="long-text">账<span class="fr">号：</span></label><input type="text" name="ID" value="chenkaiwen@527so.com"><br />
            <label class="long-text">密<span class="fr">码：</span></label><input type="password" name="password" value="123456"><br />
            <label class="long-text">部<span class="fr">门：</span></label>
            <select class="section">
                <option class="select-box" value="研发部">研发部</option>
                <option class="select-box" value="运营部">运营部</option>
            </select><br />
            <label class="long-text">启动状态：</label>
            <select class="status">
                <option class="select-box" value="有效">有效</option>
                <option class="select-box" value="无效">无效</option>
            </select><br />
            <label class="long-text">所属权限组：</label><span class="quanxian">管理员</span><br />
            <label class="long-text">创建日期：</label><span class="addTime">2017-10-30 17:50</span><br />
            <label class="long-text">更新日期：</label><span class="updateTime">2017-10-30 18：59</span><br />
            <div class="remove-btn">
                <input type="button" name="cancel" value="取消" class="cancel white-btn">
                <input type="button" name="submit" value="确认" class="submit blue-btn" id="adminRedactSub">
            </div>
        </form>
    </div>
    <!-- 删除按钮 -->
    <div class="remove-box moni-lbox" style="display: none;">
        <p>确认删除？</p>
        <div class="remove-btn">
            <input type="button" value="取消" name="cancel" class="cancel white-btn">
            <input type="button" value="确认" name="remove" class="removeSubmit blue-btn">
        </div>
    </div>
    <!-- 模拟弹出框结束 -->
    </div>
</div>
<!--父容器结束-->
<script>var pages = "管理员管理";</script>
<script src="STYLE_DOMAIN/Agent/js/jquery.js"></script>
<script src="STYLE_DOMAIN/Agent/js/common.js"></script>
<script src="STYLE_DOMAIN/Agent/js/layer/layer.js"></script>
<script src="STYLE_DOMAIN/Agent/js/role-agent.js"></script>
<script src="STYLE_DOMAIN/Agent/js/role.js"></script>
<script type="text/javascript">
    //后台提交
    //新增管理员
    $(document).on("click","#addAdminSubmit",function(){
        var name        = $("input[name=name]:visible").val();
        var tel         = $("input[name=phone]:visible").val();
        var ID          = $("input[name=ID]:visible").val();
        var password    = $("input[name=password]:visible").val();
        var bumen       = $("input[name=bumen]:visible").val();
        var flag        = $(".status").val();
        if(checkForm_add()){
            $.ajax({
                type: 'POST',
                url: '/Role/add_manager',
                data : {'name':name,'tel':tel,'ID':ID,'password':password,'bumen':bumen,'flag':flag},
                dataType: 'json',
                success: function(data) {
                        if(data.code==1){
                            layer.msg('新增成功');
                            setTimeout(function(){
                                window.location.reload(true);
                            }, 3000);
                        }else{
                            message(data.message);
                        }
                    } 
            })
        }
    });

    //管理员详情
    $(function(){
        var ziliaojson;//ajax获取数据
        $(".name").text(ziliaojson);
        $(".phone").text(ziliaojson);
        $(".ID").text(ziliaojson);
        $(".section").text(ziliaojson);
        $(".status").text(ziliaojson);
        $(".addTime").text(ziliaojson);
        $(".updateTime").text(ziliaojson);
    });

    //编辑管理员
    $(document).on("click",".adminRedact",function(){
        //提交修改
        $("#adminRedactSub").click(function(){
            var name = $("input[name=name]:visible").val(),
            phone = $("input[name=phone]:visible").val(),
            ID = $("input[name=ID]:visible").val(),
            password = $("input[name=password]:visible").val(),
            bumen = $(".section").val(),
            zhuangtai = $(".status").val(),
            quanxian = $("input[name=quanxian][checked]:visible").val();
            checkForm();//表单验证函数
            console.log(name,phone,ID,password);//验证密码并提交
        });
    });


</script>
</body>
</html>