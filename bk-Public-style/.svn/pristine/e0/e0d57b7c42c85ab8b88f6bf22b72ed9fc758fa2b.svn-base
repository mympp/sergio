@charset "UTF-8";

.consult-main{
    float: left;
    width: 98%;
    padding: 1%;
    background: #efefef;
}

.consult-main:after,.consult-main:before{
	content: "";
	display: block;
	clear: both;
}

.consult-nav{
    width: 100%;
    border-bottom: 2px solid #1da1f2;
    background: #fff;
}
.consult-nav li{
	width: 150px;
	line-height: 56px;
	text-align: center;
}
.consult-nav .selected{
	background: #1da1fe;
}
.consult-nav .selected a{
	color: #fff;
}
.consult-nav a:hover{
	color: #000;
}
.consult-nav .selected>a:hover{
	color: #fff;
}
.consult-form{
    float: left;
    width: 98%;
    background: #fff;
    margin-top: 1%;
    padding: 15px 1%;
    border-radius: 5px;
}
.consult-form span{
	display: inline-block;
	width: 150px;
	line-height: 54px;
	font-size: 16px;
	color: #494949;
	text-indent: 20px;
}
.consult-form span i{
	color: red;
	float: left;
}
.my_frText1{
	color: #1da1f2;
	font-size: 16px;
	display: inline-block;
	text-indent: 20px;
	letter-spacing: 2px;
}

.input_cell1{
	width: 480px;
    height: 32px;
    line-height: 32px;
    box-sizing: border-box;
    background: #f0f1f4;
    border: 1px solid #d6d6d6;
    border-radius: 5px;
    padding-left: 14px;
    font-size: 14px;
    color: #494949;
}

.consult-form ::-webkit-input-placeholder{
	color: #aaa;
}
.consult-form ::-moz-placeholder{/*firefox 19+*/
	color: #aaa;
}
.consult-form :-ms-input-placeholder{/*ie*/
	color: #aaa;
}
.consult-form input:-moz-placeholder{
	color: #aaa;
}
.consult-form .submit{
    width: 140px;
    height: 40px;
    color: #fff;
    font-size: 18px;
    background: #1da1fe;
    border: #1da1fe;
    border-radius: 35px;
    cursor: pointer;
    text-align: center;
    margin-left: 150px;
    margin-top: 10px;
}

/*收件箱*/
.inbox-main{
	float: left;
    width: 100%;
    background: #fff;
    border-radius: 5px;
    margin-top: 1%;
}

.inbox-nav{
	color: #494949;
	font-size: 16px;
	padding-top: 20px;
	padding-left: 20px;
}

.inbox-nav:after,.inbox-nav:before{
	clear: both;
	content: "";
	display: block;
}

.inbox-nav>.fl{
	line-height: 30px;
	margin-left: 23px;
	margin-top: 6px;
}
.inbox-nav>.fl select{
	width: 100px;
	height: 30px;
	margin: 0 16px;
	text-align-last: center;
	border: 1px solid #d6d6d6;
	border-radius: 5px;
	text-align: center;
}

.inbox-nav .inbox-nav-input{
	float: left;
	background: #f0f1f4;
	width: 400px;
	height: 40px;
	margin-left: 100px;
	line-height: 40px;
	border-radius: 30px;
	position: relative;
	border: 1px solid #d6d6d6;
	box-sizing: border-box;
}

.search-btn2{
    width: 30px;
    height: 30px;
    cursor: pointer;
    background: url(../Images/common_icon_search_nor.png) no-repeat;
    background-size: 100%;
    display: inline-block;
    position: absolute;
    top: 4px;
    right: 10px;
}

.search-input1{
    width: 325px;
    color: #494949;
    background: none;
    border: none;
    height: 30px;
    line-height: 30px;
    padding-left: 25px;
}

.inbox-list{
	clear: both;
	padding-top: 1px;
	padding-bottom: 10px;
	overflow: hidden;
}

.scroll_table{
    overflow: auto;
}

.inbox-list .inbox-listnav{
    width: 98%;
    height: 35px;
    margin-top: 20px;
    margin-bottom: 10px;
    border-bottom: 1px solid #dcdcdc;
    box-sizing: border-box;
}
.inbox-list li{
	width: 80px;
	height: 30px;
	line-height: 30px;
	margin: 0 25px 0 0;
	text-align: center;
	cursor: pointer;
}
.inbox-list li:hover,.inbox-list .selected{
	color: #1da1fe;
	border-bottom: 4px solid #1da1fe;
}

.inbox-list .inbox-listnav .fr a{
	display: inline-block;
	width: 90px;
	height: 30px;
	margin: -5px 7px;
	text-align: center;
	line-height: 30px;
	background: #1da1fe;
	border: 1px solid #1da1fe;
	border-radius: 30px;
	color: #fff;
	font-size: 14px;
	cursor: pointer;
}
.inbox-list table{
    width: 99%;
    /*margin-top: 10px;*/
    border-collapse: collapse;
}

.inbox-list thead .checkbox{
	position: relative;
	left: 0px;
}

#inbox_table thead tr{
	background: #f0f1f4;
}

.inbox-list thead th{
    line-height: 37px;
    height: 37px;
    color: #494949;
    text-align: center;
    border: 1px solid #dcdcdc;
    box-sizing: border-box;
    font-size: 14px;
    vertical-align: middle;
}

.inbox-list tbody td{
	line-height: 29px;
    height: 29px;
    color: #494949;
    text-align: center;
    border: 1px solid #dcdcdc;
    box-sizing: border-box;
    font-size: 14px;
    vertical-align: middle;
}

.inbox-list tbody img{
	position: relative;
	top: 8px;
}
.inbox-list .inbox-tabletext{
	cursor: pointer;
	text-align: left;
	text-indent: 34px;
}
.fus_list1{
	float: right;
    position: relative;
    right: 5px;
}

/*发送信息三大功能*/
.Three-cells_1{
	display: inline-block;
}

.Three-cells_1 em:first-child{
	margin-left: 0 !important;
}

.Three-cells_1 em{
	font-size: 14px;
	margin-left: 5px;
	vertical-align: middle;
	color: #494949;
	margin-right: 20px;
}

