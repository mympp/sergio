/*收件箱详情开始*/
.inbox-main-dets{
    background: #fff;
    clear: both;
    position: relative;
    top: 15px;
    border-radius: 5px;
    display: none;
}

.send_header1{
	padding-left: 50px;
    padding-top: 38px;
}

.one-cell_1{
	margin-top: 10px;
}

.send_title1{
	font-size: 20px;
    color: #494949;
    font-weight: 600;
}

.span_Tips1{
	font-size: 14px;
    color: #898989;
}

.span_Tips2{
	font-size: 14px;
    color: #1da1f2;
}

.send_mains1_div{
	padding: 15px 30px;
    margin-top: 20px;
    margin-left: 50px;
    width: 870px;
    min-height: 300px;
    max-height: 500px;
    overflow: auto;
    background: #f0f1f4;
    border: 1px solid #d6d6d6;
    border-radius: 5px;
    text-align: justify;
}

.send_mains1{
	font-size: 14px;
    color: #494949;
}

.function_List{
	padding: 28px 50px;
}

.function_List:after,.function_List:before{
	clear: both;
	content: "";
	display: block;
}

.function_List ul{
	float: left;
}

.function_List ul li{
	float: left;
	cursor: pointer;
    width: 100px;
    height: 30px;
    margin-right: 15px;
    line-height: 30px;
    text-align: center;
    font-size: 14px;
    color: #49566f;
    border: 1px solid #49566f;
    border-radius: 5px;
}

.function_List ul li:last-child{
	margin-right: 0 !important;
}
/*收件箱详细结束*/