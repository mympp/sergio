<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="baidu-site-verification" content="AD8f8NwkHq" />
		<link rel="stylesheet" href="STYLE_DOMAIN/Home/css/common.css" />
		<link rel="stylesheet" href="STYLE_DOMAIN/Home/css/index.css" />
		<title>搜索列表</title>
	</head>
	<body>
		<div id="wrapper" style="min-height: 1100px;">
			<!--页面顶部开始-->
			<include file="Common/header"/>
			<!--页面顶部结束-->
			<!--搜索框开始-->
			<div class="user-search">
				<include file="Common/search-box"/>		
			</div>
			<!--搜索框结束-->
			<!--导航-->
			<section id="tobuy_nav"><span>当前位置：</span>
				<a href="../index/index.html">首页</a> > 搜索列表
			</section>
			<!--查询列表开始-->
			<div class="chaxun-list">
				<div class="oneLine-div">
					<span class="ziti3 mg-left-50" id="type-title">求购标题：</span>
					<div class="oneLine-cell"><input type="text" class="input-sm" name="keyword" placeholder="请输入你想查找的求购标题" value="" /></div>
				</div>
				<!-- <div class="oneLine-div">
					<span class="ziti3 mg-left-50">公司名称：</span>
					<div class="oneLine-cell"><input type="text" class="input-sm" name="company" placeholder="请输入你想查找的公司名称" /></div>
				</div>
				<div class="oneLine-div">
					<span class="ziti3 mg-left-50">电话号码：</span>
					<div class="oneLine-cell"><input type="text" class="input-sm" name="tel" placeholder="请输入你想查找的电话号码" /></div>
				</div> -->
				<div class="oneLine-div">
					<span class="ziti3 mg-left-50">发布时间：</span>
					<div class="oneLine-cell">
						<input type="datetime" class="input-sm laydate-icon" id="inputStartTime" name="sdate" placeholder="开始时间" />
						<sapn class="most">至</sapn>
						<input type="datetime" class="input-sm laydate-icon" id="inputEndTime" name="edate" placeholder="结束时间" />
					</div>
				</div>
				<div class="Check-all">
					<a href="#" class="start-select">开始查询</a>
				</div>
			</div>
			<!--查询列表结束-->
			
			<!--展示数据开始-->
			<div id="Show-data">
				<span class="result-text">查询结果</span>
				<table class="table table-hover" id="Show-data-Table">
					    <if condition="$is_login eq 1">
					    <thead>
							<tr>
								<th class="center col-10">发布时间</th>
								<th class="center col-25 line-overflow fabu-biaoti">标题</th>
								<th class="center col-10 lianxi_hide">联系用户</th>
								<th class="center col-15 lianxi_hide">联系电话</th>
								<th class="center col-22 lianxi_hide">公司名称</th>
								<th class="center col-10 line-overflow fabu-diqu">地区</th>
								<th class="center col-8 fabu-caozu">操作</th>
							</tr>
					    </thead>
					    <tbody>			    
						<volist name="data" id="val">
							<tr>
								<td class="center col-10">{$val.addtime}</td>
								<td class="center col-25 line-overflow">{$val.title}</td>
								<td class="center col-10">{$val.truename}</td>
								<td class="center col-15">{$val.telephone}</td>
								<td class="center col-22">{$val.company}</td>
								<td class="center col-10 line-overflow">{$val.address}</td>
								<td class="center col-8">
									<a href="{:U('Index/details',array('ty'=>$ty,'id'=>$val['id']))}" class="handle" target="_blank">详情</a>
								</td>
							</tr>
						</volist>
						<if condition="$count eq 0">
							<tr class="search-null">
								<td class="center" colspan="8">暂无相关数据</td>
							</tr>
						</if>
						</tbody>
					    <else/>
					    <thead>
							<tr style="border-bottom:1px solid #dddddd;height:35px;">
								<th class="center col-10">发布时间</th>
								<th class="center col-25 line-overflow fabu-biaoti col-40">标题</th>
								<th class="center col-10 line-overflow fabu-diqu col-40">地区</th>
								<th class="center col-8 fabu-caozu col-10">操作</th>
							</tr>
					    </thead>
					    <tbody>
					    <volist name="data" id="val">
							<tr>
								<td class="center col-10">{$val.addtime}</td>
								<td class="center col-25 line-overflow">{$val.title}</td>
								<td class="center col-10 line-overflow">{$val.address}</td>
								<td class="center col-8">
									<a href="{:U('Index/details',array('ty'=>$ty,'id'=>$val['id']))}" class="handle" target="_blank">详情</a>
								</td>
							</tr>	
						</volist>
						<if condition="$count eq 0">
							<tr class="search-null">
								<td class="center" colspan="8">暂无相关数据</td>
							</tr>
						</if>
						</tbody>
					    </if>
					<tfoot>

						<tr>
							<td colspan="8" class="center">
								<nav>
									<ul class="pagination">
										{$page}
									</ul>
								</nav>

							</td>
						</tr>
					</tfoot>
				</table>
			</div>
			<!--展示数据结束-->
			<!--页面底部开始-->
			<include file="Common/footer"/>
			<!--页面底部结束-->
		</div>
		<script type="text/javascript" src="STYLE_DOMAIN/Home/js/jquery.js"></script>
		<script type="text/javascript" src="STYLE_DOMAIN/Home/js/common.js"></script>
		<script type="text/javascript" src="STYLE_DOMAIN/Home/js/laydate.js"></script>
		<script type="text/javascript" src="STYLE_DOMAIN/Home/js/search-list.js"></script>
		<script>
			// $(function(){
			// 	var state = 0;//假设0为未登录
			// 	//判断用户是否登录
			// 	if(state<=0){
			// 		$(".lianxi_hide").remove();
			// 		$(".fabu-biaoti,.fabu-diqu").addClass("col-40");
			// 		$(".fabu-caozu").addClass("col-10");
			// 		$("tfoot").remove();
			// 	}
			// })
			var $switch_url="{:U('Index/switch_search')}";	
			var $details="";
			$(".leftTemplate").load("{:U('Common/leftTemplate')}");
		</script>
	</body>
</html>