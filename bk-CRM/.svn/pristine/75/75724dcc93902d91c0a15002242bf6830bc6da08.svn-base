		<script>
			$(function(){
			checked1();//检测屏幕宽度
				var IndexModel = {$look}==1?true:false;
				if(IndexModel){
					$(".WeixinPc-Y").show()
				}else {
					$(".WeixinPc-Y").hide()
				}

				var wxLook = {$wxLook};
				if(wxLook == 1){
					$(".WeixinPc-Y").hide();
					$(".Guidance-box").fadeIn();
				}
				$(document).on("click",".Winxin-Btn",function(){
					$(".WeixinPc-Y").hide();
					$(".Guidance-box").fadeIn();
				})
				$(document).on("click",".Winxin-Clos",function(){
					$(".WeixinPc-Y").hide();
					$(".Guidance-box").fadeIn();
				})
				if($(window).height() < 730){
					$(".IndexCenter").height(654);//保持最小高度
				}else{
					checked1();//检测屏幕宽度
					getHeight();//动态获取高度
				}

				$(window).resize(function(){
					var winH = $(window).height();
					if(winH > 730){
						window.top.location.reload();
						getHeight();//检测屏幕宽度
						checked1();//动态获取高度
					}
				});

				//为左侧导航商品的P段落绑定单击事件
				$(document).on("click",".icon-shopping-div p",function(e){
					$(this).addClass("open").siblings().removeClass("open");
					if($(this).hasClass("open")){
						$(this).parent().prev().addClass("active").siblings().removeClass("active");
					}
					e.stopPropagation();
				})
				
				//为线索头部导航li绑定单击事件
				$(document).on("click",".xiansuo_hdleft ul li",function(){
					var index = $(this).index();
					$(this).addClass("active").siblings().removeClass("active");
					if(index==4){
						$(".More_Actions_ul").slideToggle();
					}else{
						$(".More_Actions_ul p").removeClass("active");
						$(".More_Actions_ul").slideUp();
					}
				})
				
				//阻止下拉菜单父元素事件冒泡
				$(document).on("click",".More_Actions_ul",function(e){
					e.stopPropagation();
				})
				
				//为下拉菜单P元素绑定单击事件
				$(document).on("click",".More_Actions_ul p",function(e){
					$(this).addClass("active").siblings().removeClass("active");
					e.stopPropagation();
				})
		})

		function getHeight() {
				var winH = $(window).height();
				var HTop = $(".left_header").height();//获取头部标题高度
				$(".left_template,.right_template").height(winH);
				$(".fankui_main").height(winH-110);
				
				//修改父盒子高度
				$(".outer_div").css({
					"height":winH
				})
				
				//修改内容区高度
				$(".IndexCenter").css({
					"height":(winH-HTop)
				})
			}
			
			function checked1(){
				(function() {
					console.log(document.body.offsetWidth);
					if(document.body.offsetWidth > 1900) {
						loadJs("STYLE_DOMAIN/Home/1.6/js/crm-index.js")

					} else if (document.body.offsetWidth < 1880) {
						loadJs("STYLE_DOMAIN/Home/1.6/js/crm-index2.js")
					}
				})()

				function loadJs(src) {
					var head = document.getElementsByTagName('head')[0];
					var s = document.createElement("script");
					s.type = "text/javascript";
					s.src = src;
					head.appendChild(s);
				}
			}
		$(function(){
			var ticket="{$ticket}";
			//触发jsonp
