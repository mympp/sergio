$(document).ready(function(e) {	var topA=$("#endhdd").offset().top;	//定义数组，储存楼层距离顶部的高度（floorsTop）	var floorsTop=[];	function floorsTopF(){		for(var i=0; i<$(".floors").length;i++){			floorsTop[i]=($(".floors").eq(i).offset().top)-50;			}			}	function floorsNavF(){		var sTop = $(document).scrollTop()+320; //获取垂直滚动的距离 		if(sTop>floorsTop[0]){			if(sTop>=topA) {				$("#floorsNav").hide();							} else {				$("#floorsNav").fadeIn(500);			}		}else{			$("#floorsNav").fadeOut(500);		}						for(var i=0; i<=$("#floorsNav li").length;i++){						if(sTop>=floorsTop[i] && sTop<floorsTop[i+1]){						$("#floorsNav li").removeClass("on");									$("#floorsNav li").eq(i).addClass("on");				}else if(sTop>=topA){					$("#floorsNav").hide();				}		}	}		$(window).scroll(function(e){		floorsTopF();		floorsNavF();		//console.log(floorsTop);	});		$("#floorsNav li").each(function(i) {		$(this).click(function(){			var num=floorsTop[i]+20;			$('html, body').animate({scrollTop: num}, 300);		})	});		//判断窗口变化		/*function winResize(){		var winWidth=$(document).width();		if(winWidth<=1024){			console.log(winWidth)			$("body").removeClass();				$("body").addClass("bw1000");		}else if(winWidth>1024 && winWidth<=1380){			console.log(winWidth)			$("body").removeClass();					}else{			$("body").removeClass();				$("body").addClass("w1190");			console.log(winWidth)		}	}	$(window).resize(function(){				 winResize();	})*/	//floorsNavF();	/*winResize();*/	//console.log($(document).width())});// 楼层按钮显示隐藏效果$(function() {	var $floor_wrap = $(".J-floor_solid"),		$floor_prev = $floor_wrap.find(".prev"),		$floor_next = $floor_wrap.find(".next");		function toShow() {		$floor_prev.show();		$floor_next.show();	}	function toHide() {		$floor_prev.hide();		$floor_next.hide();	}		$floor_wrap.hover(function() {		toShow();	},function() {		toHide();	});		toHide();		//主菜单	var $mainNav     = $(".J-mainNav"),		$li_index    = $mainNav.find(".m_zl li"),	    $float_layer = $(".float-layer"),		$content     = $float_layer.find(".text-content"),		i            = 0;			function navToggle(par1, par2) {		$float_layer.removeClass(par1).addClass(par2);	}		$mainNav.mouseenter(function() {		navToggle("hide", "show");		$float_layer.animate({			left:180		}, 200);	});	$mainNav.mouseleave(function() {		navToggle("show", "hide");		$float_layer.css("left",170);	});		$li_index.mouseover(function() {		i = $(this).index();		$content.eq(i).removeClass("hide").addClass("show").siblings().addClass("hide").removeClass("show");	});		//首页轮播图下方滚动条		});