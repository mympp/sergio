<!--图片展示开始-->

<div class="wrap h_new_pro">
    <div class="hd">
        <h2>— 图片展示 —</h2>
        <i class="arrow"></i>
    </div>
    <div class="bd">
<!--{php $tags=tag("moduleid=12&condition=status>2 and username='$username'&pagesize=8&order=addtime desc&fields=itemid,title,linkurl,thumb,addtime,items,open&template=null");}-->
    	<ul class="clearfix">
        	{loop $tags $i $t}
        	<li>
            	<div class="pic">
            		<a href="{if $homeurl}{$t[linkurl]}{else}{userurl($username, 'file=photo&itemid='.$t['itemid'], $domain)}{/if}" target="_blank">
            			<img src="{imgurl($t[thumb])}">
            		</a>
            	</div>
                <p class="rmb mt5">{$t[items]}张图片</p>
                <p class="f12">{$t[title]}</p>
            </li>
            {/loop}
         </ul>
    </div>
</div>

<!--图片展示结束-->