
<!--公司简介开始-->
<div class="h_about_bg">
	<div class="wrap h_about">
    	<div class="hd">
        	<div class="con">
                <h2>公司简介</h2>
                <h3>COMPANY PROFILE</h3>
            </div>
        </div>
    	<div class="bd">
    		<div class="pic">
			{if $video}
				{load('player.js')}
				<div style="width:250px;height:210px;text-align:right;float:right;"><script type="text/javascript">document.write(player('{$video}',240,200,'',1));</script></div>
				{else}
				<img src="{$COM[thumb]}" align="right"/>
			{/if}
				</div>
            <div class="text">&#160; &#160; {$COM[intro]} [<a href="{userurl($username, 'file=introduce', $domain)}" class="t">详细介绍</a>]</div>
    	</div>
    </div>
</div>
<!--公司简介结束-->