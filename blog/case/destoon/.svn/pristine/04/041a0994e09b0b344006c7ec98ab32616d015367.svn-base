body { background:#F6F6F6;}
.dt-index-title {
	width: 100%;
	position: relative;
	font-size:0.8rem;
}
.dt-index-title .box-title {
	width:30%;
	margin-left:0.25rem;
            height: 2.25rem;
            line-height: 2.25rem;
            border-bottom: 0.15rem solid #ff9900;
            color: #666;
            font-weight: 500;
			text-align:center
        }

.dt-index-title .dt-right-cate {
	font-size:0.6rem;
	position: absolute;
	top: 50%;
	left: 30%;
	margin-left:0.35rem;
	-webkit-transform: translateY(-50%);
	      transform: translateY(-50%);
}
.dt-index-title .aui-right-more {
	font-size:0.75rem;
	position: absolute;
	top: 50%;
	right: 1rem;
	-webkit-transform: translateY(-45%);
	      transform: translateY(-45%);
}
.dt-index-title a { color:#999;}
.dt-sell-cate-list .aui-row { padding:0.25rem 0;}
.dt-sell-cate-list .aui-col-xs-3 { padding:0.15rem 0;}
.dt-sell-cate-list .aui-grid-label { padding:0 0.25rem;}
.dt-sell-list .dt-sell-list-item { padding-left:0.25rem !important;}
.dt-sell-list .dt-sell-list-item .aui-list-item-inner { padding-right:0.25rem !important;}
.dt-sell-list-item .aui-col-xs-6 {
height:11.5rem; margin-bottom:0.5rem;	
}
.dt-sell-list-item .aui-img {
background: #fff;	
}
.dt-sell-list-item .aui-img img {
	width:100%;
	height:8rem;
	overflow:hidden;
}
.dt-sell-list-item .aui-img-body { padding: 0 0.35rem; background: #fff; height:3.5rem; font-size: 0.7rem;}
.dt-sell-list-item .aui-img-body .aui-waterfall-body {
    background: #fff;
    color: #666;
	height:1.9rem;
    font-size: 0.7rem;
	margin-bottom:0.25rem;
	text-align:left;
	overflow:hidden;
}
.dt-sell-list-item .aui-img-body .aui-iconfont { font-size: 0.6rem; color:#999}
.dt-sell-list-item .aui-img-body .aui-pull-left { font-size: 0.6rem; color:#999}
.dt-sell-list-item .aui-img-body .aui-pull-right { font-size: 0.7rem; color:#ff0000}
.dt-sell-list-item .aui-img-body .aui-waterfall-body span { font-size:0.7rem;color:#000;}

dt-media-sell .aui-list .aui-list-item {
	padding-left: 0.5rem;
}
dt-media-sell .aui-list .aui-list-item-media {
	width: 6rem;
	height:5.5rem;
	padding: 0.25rem 0;
    padding-right: 0.5rem;
	border:#000 0px solid;
}

#itemfoot .aui-bar-tab-label { color:#000; font-size:0.6rem; margin-top:-0.25rem;}
.dt-media-sell .aui-list-item-text .dt-label { padding:0.3rem 0.35rem; margin-right:0.5rem; background:#039be5; color:#FFF; font-size:0.65rem;}
.sell-list-item-btn .aui-label { border-radius:0.25rem; padding:0.35rem 0; font-size:0.7rem; color:#039be5; width:45%; margin:0 0.25rem;}
.sell-list-item-btn .aui-label a { color:#039be5;}
